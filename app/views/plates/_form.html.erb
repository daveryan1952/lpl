<%= form_for @post do |f| %>
<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :content %>
  <%= f.text_area :content, rows: 20, class: "form-control" %>
</div>
<div>
  <%= f.label :asset, "File" %><br>
  <%= f.file_field :asset %>
</div>
<div class="form-group">
  <%= f.label :tag_names %><br>
  <%= f.text_field :tag_names, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :author %>
  <%= f.text_field :author, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :published %>
  <%= f.check_box :published %>
</div>

<%= f.submit "Save", :name => "save", class: "btn btn-default" %>
<!--%= f.submit "Save and publish", :name => "publish", class: "btn btn-default" %>
<!--%= f.submit_tag "Save and publish" %>
<!--%= f.submit_tag "Save as draft" %>
<!--%= link_to "Save as draft", draft_post_path(@post), class: "btn btn-default" %>

<% end %>
